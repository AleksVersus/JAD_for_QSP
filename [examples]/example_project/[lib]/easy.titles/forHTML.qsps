# forHTML
if usehtml=1:
	! убираем из строки символы амперсанда, подменяя их на &amp;
	$args[0]=$replace($args[0],'&','&amp;')
	! убираем из строки символы меньше, подменяя их на &lt;
	$args[0]=$replace($args[0],'<','&lt;')
	! убираем из строки символы больше, подменяя их на &gt;
	$args[0]=$replace($args[0],'>','&gt;')
end
$result=$args[0]
