# get.word.inPos
if $args[2] = '': $args[2]='|'
$args[0] = $args[0]+$args[2]
args[1] = args[1]
local $cs_ = ''
loop while len($args[0])>0 and args[1]>0 step args[1]-=1:
	if instr($args[0],$args[2])>0:
		$cs_ = $mid($args[0],1,instr($args[0],$args[2]))
		$args[0] = $mid($args[0],instr($args[0],$args[2])+1)
	else
		$cs_ = $args[0]
		$args[0] = ''
	end
end
$result=$replace($cs_, $args[2])
