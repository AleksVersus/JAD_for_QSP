	if start=2: *nl & 'Они станут доступы, после того как вы покинете крио-камеру, а для этого необходимо выбрать род механоида <font color="blue">Альфа</font>, <font color="blue">Бета</font> или <font color="blue">Гамма</font>.'
end

if INSTR(1,$usr,'включить музыку') or INSTR(1,$usr,'вкл музыку'): music=1 & gs 'nl' & '<font color="white">Готово.</font>'
