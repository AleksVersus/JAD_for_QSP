:nxt
if $meh_act='добыча':
	time_w=time_w+1
	*p '<font color="#ADD8E6">.</font>'
	if time_w=5:
		time_w=0 & cycle=cycle+1
		gs 'nl' & '<font color="white">Цикл: <<cycle>></font>'
		r=rand(100,1)
		if $rod='G': r=r-10
		if $mehpod='Харвестер': r=r-15
		if r<=5:
			if u_item[3]<99: u_item[3]=u_item[3]+1 & '<font color="magenta">Вы добыли редкие минералы.</font>' & jump 'nxt' else 'Вы добыли минералы, но не смогли перенести их на склад, так как на нем закончилось место.' & jump 'nxt'
		end
		if r<=70:
			if u_item[2]<99: u_item[2]=u_item[2]+1 & '<font color="yellow">Вы добыли минералы.</font>' & jump 'nxt' else 'Вы добыли минералы, но не смогли перенести их на склад, так как на нем закончилось место.' & jump 'nxt'
		end
		*nl & '<font color="gray">Добыть минералы не вышло.</font>'
		jump 'nxt'
	end
end

:nxt2
if $meh_act='сражение':
	if $module='Защита +1': t_guard=1
	if $module='Защита +2': t_guard=2
	if $module='Защита +3': t_guard=3
	if $module='Защита +4': t_guard=4
	if $module='Защита +5': t_guard=5
	if $module='Усилитель огневой мощи +1': t_p_dmg=2
	if $module='Усилитель огневой мощи +2': t_p_dmg=4
	if $module='Усилитель огневой мощи +3': t_p_dmg=6
	if $module='Усилитель огневой мощи +4': t_p_dmg=10
	if $module='Усилитель огневой мощи +5': t_p_dmg=13

	npc_sh=0
	time_w=time_w+1
	*p '<font color="#ADD8E6">.</font>'
	if time_w=5:
		time_w=0 & cycle=cycle+1
		
		gs 'nl' & '<font color="white">Цикл: <<cycle>></font>'
		
		:nxt_npc
		npc_sh=npc_sh+1
		
		if npc_hp[1]<=0 and npc_hp[2]<=0 and npc_hp[3]<=0 and npc_hp[4]<=0 and npc_hp[5]<=0: jump 'vic'
		
		if npc_hp[npc_sh]>=1:
			r_battle=rand(20,1)
			if r_battle<p_guard+t_guard:
				*nl & '<font color="gray"><<$npc_name[npc_sh]>>: промах.</font>'
			end

			if r_battle>=p_guard+t_guard or r_battle=20:
				p_ghp=p_ghp-npc_dmg[npc_sh]
				if p_ghp<=0: p_hp=p_hp-npc_dmg[npc_sh]
				if p_ghp<=0: p_ghp=0
				if p_hp<=0: p_ghp=0
				
				r_rbmsg=rand(6,1)
				if r_rbmsg=1: *nl & '<font color="red"><<$npc_name[npc_sh]>>: царапнул вас на <<npc_dmg[npc_sh]>> ед. урона.</font>'
				if r_rbmsg=2: *nl & '<font color="red"><<$npc_name[npc_sh]>>: попал по вам на <<npc_dmg[npc_sh]>> ед. урона.</font>'
				if r_rbmsg=3: *nl & '<font color="red"><<$npc_name[npc_sh]>>: порезал вас на <<npc_dmg[npc_sh]>> ед. урона.</font>'
				if r_rbmsg=4: *nl & '<font color="red"><<$npc_name[npc_sh]>>: подстрелил вас на <<npc_dmg[npc_sh]>> ед. урона.</font>'
				if r_rbmsg=5: *nl & '<font color="red"><<$npc_name[npc_sh]>>: ударил вас на <<npc_dmg[npc_sh]>> ед. урона.</font>'
				if r_rbmsg=6: *nl & '<font color="red"><<$npc_name[npc_sh]>>: расстрелял вас на <<npc_dmg[npc_sh]>> ед. урона.</font>'
				
				!edit '!!! 1 <<npc_hp[1]>> 2 <<npc_hp[2]>> 3 <<npc_hp[3]>> 4 <<npc_hp[4]>> 5 <<npc_hp[5]>>'
				
				gs 'c_mehpod'
				if p_hp<=0: gs 'c_death'
			end
		end
		
		if battle_back=1 and target_n_npc!0 and $npc_name[target_n_npc]!'' and target_n_npc=npc_sh:
			r_battle=rand(20,1)
				
			if r_battle>=npc_guard[target_n_npc] or r_battle>=20:
				npc_hp[target_n_npc]=npc_hp[target_n_npc]-p_dmg
				npc_hp[target_n_npc]=npc_hp[target_n_npc]-t_p_dmg
				*nl & '<font color="yellow"><<$mehpod>>: нанес <<p_dmg>> урона по: <<$npc_name[target_n_npc]>>.</font>'
				
				if $rod='A':
					r_heks=rand(6,1)
					if r_heks=1:
						*nl & '<font color="green">Хексы-повстанцы подстрелили: <<$npc_name[target_n_npc]>>: нанеся <<p_dmg>> ед. урона!</font>'
						npc_hp[target_n_npc]=npc_hp[target_n_npc]-p_dmg/3
					end
				end
					
				!if npc_hp[target_n_npc]<=0:
				
					!*nl & '<font color="yellow"><<$npc_name[target_n_npc]>>: подбит!</font>'
					

					
					!battle_back=0
					!$npc_name[target_n_npc]=''
				!end
				
				
				jump 'nxt_p'
			end
			if p_hp>=1: *nl & '<font color="gray"><<$mehpod>>: промах.</font>'
			:nxt_p
				
		end
		
		if npc_hp[1]<=0 and $npc_name[1]!'':
			if target_n_npc=1: $target=''
			*nl & '<font color="yellow"><<$npc_name[1]>>: подбит!</font>' & $npc_name[1]='' & battle_back=0
					
			if battle[2]=1:
				q_msg[9]=1
				gs 'nl' & '<<$sys>>: Вы забрали <font color="magenta">Протовещество</font>.'
			end
			
			pa_rep=pa_rep+npc_exp[1]
			
		end
		if npc_hp[2]<=0 and $npc_name[2]!'':
			if target_n_npc=2: $target=''
			*nl & '<font color="yellow"><<$npc_name[2]>>: подбит!</font>' & $npc_name[2]='' & battle_back=0
			pa_rep=pa_rep+npc_exp[2]
		end
		if npc_hp[3]<=0 and $npc_name[3]!'':
			if target_n_npc=3: $target=''
			*nl & '<font color="yellow"><<$npc_name[3]>>: подбит!</font>' & $npc_name[3]='' & battle_back=0
			pa_rep=pa_rep+npc_exp[3]
		end
		if npc_hp[4]<=0 and $npc_name[4]!'':
			if target_n_npc=4: $target=''
			*nl & '<font color="yellow"><<$npc_name[4]>>: подбит!</font>' & $npc_name[4]='' & battle_back=0
			pa_rep=pa_rep+npc_exp[4]
		end
		if npc_hp[5]<=0 and $npc_name[5]!'':
			if target_n_npc=5: $target=''
			*nl & '<font color="yellow"><<$npc_name[5]>>: подбит!</font>' & $npc_name[5]='' & battle_back=0
			pa_rep=pa_rep+npc_exp[5]
		end
		
		if p_run=1:
			a_cycle=a_cycle+1
			
			if a_cycle=10:
				a_cycle=0
				if $mehpod='Скаут': r_run=1
				if $mehpod!'Скаут': r_run=rand(3,1)
				if r_run=1:
					gs 'nl' & '<<$sys>>: Вы бежали из битвы.'
					$p_loc='' & $meh_act='' & $target='' & target_n_npc=0 & battle_back=0 & p_run=0
					gs 'c_battle_tz'
					
					$npc_name[1]=''
					$npc_name[2]=''
					$npc_name[3]=''
					$npc_name[4]=''
					$npc_name[5]=''
					
					jump 'run'
				end
				gs 'nl' & '<<$sys>>: <font color="orange">Враг догнал вас!</font>'
				:run
			end
		end
			
		!if npc_hp[1]>0 or npc_hp[2]>0 or npc_hp[3]>0 or npc_hp[4]>0 or npc_hp[5]>0:
		!	if $meh_act='сражение': jump 'nxt2'
		!end
			
		if npc_sh<l_max_npcgen:
			jump 'nxt_npc'
		end
			
		jump 'nxt2'
			
		:vic
			
		$meh_act='' & $target='' & target_n_npc=0 & battle_back=0
		gs 'nl' & '<<$sys>>: Все цели подбиты.' & gs 'c_loot'
	end
end
