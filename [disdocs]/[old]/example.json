{
	"projects": // основной объект, который содержит массив
	[ // массив обозначается квадратными скобками, и в него могут помещаться другие объекты
		{
			"build": /* команда собрать. */
			{
				"export":"game.qsp", /* в корневой папке должен получиться данный файл */
				"top_location":"[start]", /* первой локацией должна идти эта */
				"folders": /* перечисляем, из каких папок брать файлы для сборки */
				[
					{
						"path": ".", /* указана текущая папка */
					},
					{
						"path": "D:\\my\\projects\\Вопросы", /* здесь указан абсолютный путь */
					},
					{
						"path": "projects\\Вопросы", /* здесь указан относительный путь */
					},
				],
				"files": /* или/и перечисляем, какие файлы брать для сборки */
				[
					{
						"path":"D\\my\\projects\\01_меню.qsp-txt",
					},
					{
						"path":"game.qsp-txt",
					}
				]
			}
		},
		{ // объекты с одинаковыми ключами, должны заключаться в разные значения (фиг скобки)
			"build": /* команда собрать. */
			{
				"export":"lib\\drive.qsp", /* файл появится во вложенной папке lib */
				"top_location":"!--test--!", /* первой локацией должна идти эта */
				"folders": /* перечисляем, из каких папок брать файлы для сборки */
				[
					{
						"path": "lib", // относительный путь к папке
					}
				],
				"files": /* или/и перечисляем, какие файлы брать для сборки */
				[
					{
						"path": "old-lib\\easy.math.old.qsps"
					},
					{
						"path": "old-lib\\easy.dialog.old.txt-qsp"
					}
				]
			}
		},
		{ /* команда запуска. Запускает указанный файл после сборки */
			"start": "game.qsp",
		}
	]
}
